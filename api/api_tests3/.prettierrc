{
  "useTabs": false,
  "trailingComma": "all",
  "tabWidth": 2,
  "printWidth": 140,
  "semi": true,
  "singleQuote": true,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ["*.json", ".*.json"],
      "options": {
        "tabWidth": 4
      }
    }
  ],
  "arrowParens": "avoid",
  "quoteProps": "as-needed"
}
